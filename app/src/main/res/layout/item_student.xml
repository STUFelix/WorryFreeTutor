<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="80dp"
                                            tools:context=".discover.MyAdapter"
                                             android:id="@+id/whole_item"
>


    <TextView
            android:id="@+id/item_title"
            android:layout_height="30dp" android:layout_width="240dp"   android:textColor="#444444"
            android:text="优质家教资源七八九十一二" android:textStyle="bold" android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"   android:gravity="left" android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"/>
    <TextView android:id="@+id/item_price"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="300/课时" android:textStyle="" android:textColor="@color/blue" android:textSize="18sp"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginEnd="24dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toEndOf="@+id/item_title" android:layout_marginStart="8dp"
              android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.276"/>
    <TextView android:id="@+id/item_subject"
              android:layout_height="wrap_content" android:layout_width="wrap_content"
              android:text="初三化学"   android:textSize="14sp" android:textColor="@color/royalblue"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginBottom="5dp"
    />
    <TextView android:id="@+id/item_hot"
              android:layout_height="wrap_content" android:layout_width="wrap_content"
              android:text="5人报名"   android:textSize="13sp" android:textColor="@color/navy"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="40dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginBottom="5dp"
    />
    <TextView android:id="@+id/item_address"
              android:layout_height="wrap_content" android:layout_width="wrap_content"
              android:text="金平区/5km"    android:textColor="@color/midnightblue"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginBottom="5dp"
              android:layout_marginStart="12dp"/>
</android.support.constraint.ConstraintLayout>